package employeerostering.employeerostering;

import java.lang.Number;

rule "hoursOfRequest"
	dialect "mvel"
	when
		ShiftAssignment( employee != null , dayOfRequest != null , dayOfRequest.timeOffHrs <= 2 , shift.timeslot.startTime.toLocalDate() == ( dayOfRequest.date ) , dayOfRequest.type == "H" )
	then
		scoreHolder.addSoftConstraintMatch(kcontext, -100);
		System.out.println("daya request off");
end
