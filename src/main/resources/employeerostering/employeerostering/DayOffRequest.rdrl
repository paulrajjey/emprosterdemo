package employeerostering.employeerostering;

import java.lang.Number;

rule "DayOffRequest"
	dialect "mvel"
	when
		$dayOffRequest : DayOffRequest( date != null )
		ShiftAssignment( employee == $dayOffRequest.employee , ( type="F"  , shift.timeslot.startTime.toLocalDate() == $dayOffRequest.date ||  type="H" )
	then
		scoreHolder.addSoftConstraintMatch(kcontext, -100);
end
