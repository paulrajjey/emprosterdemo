package employeerostering.employeerostering;

import java.lang.Number;

rule "HoursOffRequest"
	dialect "mvel"
	when
		$dayOffRequest : DayOffRequest( date != null , type == "H")
										ShiftAssignment( employee == $dayOffRequest.employee  ,  shift.timeslot.startTime.toLocalDate() == $dayOffRequest.date  , eval( $dayOffRequest.timeOffHrs > 2.0) )
	then
		scoreHolder.addSoftConstraintMatch(kcontext, -100);
end
